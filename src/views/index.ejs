<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejemplo Validacion de Formularios</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">

                        <form id="form" action="/registrar" method="POST">
                            <div class="mb-3">
                                <label for="nameAndLastName" class="form-label">Nombre y Apellido</label>
                                <input type="text" class="form-control" id="nameAndLastName" name="nameAndLastName">
                            </div>

                            <div class="mb-3">
                                <label for="age" class="form-label">Edad</label>
                                <input type="number" class="form-control" id="age" name="age">
                            </div>

                            <div class="mb-3">
                              <label for="emailAddress" class="form-label">Email Address</label>
                              <input type="email" class="form-control" id="emailAddress" name="emailAddress">
                            </div>
                            
                            <div class="mb-3">
                              <label for="phone" class="form-label">Phone</label>
                              <input type="text" class="form-control" id="phone" name="phone">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    
    <script>
        $('#form').on('submit', function(e){
            e.preventDefault();

            let nameAndLastName = $('#nameAndLastName');
            
            let age = $('#age');
            
            let emailAddress = $('#emailAddress');

            let phone = $('#phone');

            $.ajax({
                type: "POST",
                url: "/registrar",
                data: {
                    nameAndLastName: nameAndLastName.val(),
                    age: age.val(),
                    emailAddress: emailAddress.val(),
                    phone: phone.val()
                },
                success: function (response) {
                    if(response.errors){
                        console.log(response.errors);

                        alert(response.errors[0].msg);
                    }
                }
            });

        });
    </script>
</body>
</html>